<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <a href="{{url}}">
                        <h4 class="card-title">{{title}}</h4>
                    </a>
                    <p>{{timeago create_at}}</p>
                </div>

                <div class="card-body">
                    <p>{{description}}</p>
                    <a href="/api/delete/{{id}}" class="btn btn-danger btn-block">Delete</a>
                    <a href="/api/edit/{{id}}" class="btn btn-primary btn-block">Edit</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There not links</p>
                <a href="/api/add" class="btn btn-primary btn-block">Create One !</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>